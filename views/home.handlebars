              <h5 class="card-title"><code>colors={{@index}}</code></h5>
              <div class="row">
              {{#each this}}
                <div class="col-sm" style="background: {{this}}; height: 50px;"></div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
